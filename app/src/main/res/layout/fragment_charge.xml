<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.alaa.microprocess.lrahtk.Fragment.Charge"
    android:layoutDirection="ltr"
    >

    <RelativeLayout
        android:id="@+id/Relative_Map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        android:visibility="visible"
        android:layout_above="@+id/continuation"
        >

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



        <AutoCompleteTextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/cairo"
            android:background="@drawable/rec_items_shape"
            android:layout_margin="20dp"
            android:textSize="15sp"
            android:hint="شحن الي "
            android:gravity="center_horizontal"
            android:elevation="5dp"
            />




        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pin"
            android:scaleType="fitXY"
            />



    </RelativeLayout>
    <Button
        android:id="@+id/continuation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_btn_background"
        android:textSize="20sp"
        android:text="@string/continuation"
        android:textColor="@color/white"
        android:fontFamily="@font/cairo"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"

        />




</RelativeLayout>
