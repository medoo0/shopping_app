<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >

        <shape android:shape="rectangle">
            <stroke

                android:width="1dp"
                android:color="@color/blue"
                />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                />
